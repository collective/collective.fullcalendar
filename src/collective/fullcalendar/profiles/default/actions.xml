<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n">

 <object name="object" meta_type="CMF Action Category">
  <object name="fullcalender_settings" meta_type="CMF Action" i18n:domain="plone">
   <property name="title" i18n:translate="title_fullcalender">Fullcalender Settings</property>
   <property name="description" i18n:translate="help_fullcalender">Set setting for Fullcalender.</property>
   <property name="url_expr">string:${object_url}/@@fullcalender_settings</property>
   <property name="icon_expr"></property>
   <property name="available_expr">object/@@fullcalender_tool/enabled|nothing</property>
   <property name="permissions">
    <element value="plone.app.event: Import Ical"/>
   </property>
   <property name="visible">True</property>
  </object>
 </object>

 <object name="object_buttons" meta_type="CMF Action Category">
  <object name="fullcalender_enable" meta_type="CMF Action" i18n:domain="plone">
   <property name="title" i18n:translate="title_fullcalender_enable">Enable fullcalender</property>
   <property name="description" i18n:translate="help_fullcalender_enable">Click to enable the fullcalender feature on this context.</property>
   <property name="url_expr">string:$object_url/@@fullcalender_settings/enable</property>
   <property name="available_expr">object/@@fullcalender_tool/available_disabled|nothing</property>
   <property name="permissions">
    <element value="plone.app.event: Import Ical" />
   </property>
   <property name="visible">True</property>
  </object>
  <object name="fullcalender_disable" meta_type="CMF Action" i18n:domain="plone">
   <property name="title" i18n:translate="title_fullcalender_disable">Disable fullcalender</property>
   <property name="description" i18n:translate="help_fullcalender_disable">Click to disable the fullcalender feature on this context.</property>
   <property name="url_expr">string:$object_url/@@fullcalender_settings/disable</property>
   <property name="available_expr">object/@@fullcalender_tool/enabled|nothing</property>
   <property name="permissions">
    <element value="plone.app.event: Import Ical" />
   </property>
   <property name="visible">True</property>
  </object>
 </object>

</object>
